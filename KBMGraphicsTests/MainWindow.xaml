<Window x:Class="KBMGraphicsTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KBMGraphicsTests"
        mc:Ignorable="d"
        xmlns:openTk="clr-namespace:OpenTK;assembly=OpenTK.GLControl"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <WindowsFormsHost Initialized="WindowsFormsHost_Initialized">
            <openTk:GLControl x:Name="RenderCanvas" Load="renderCanvas_Load" Paint="renderCanvas_Paint" Width="800" Height="600"/>
        </WindowsFormsHost>
    </Grid>
</Window>
